#!/usr/bin/env node

'use strict';
var Command = require('commander').Command,
    BaseManager = require('../lib/BaseManager'),
    manager = new BaseManager(),
    program = new Command(),
    nop = function() {};

program
    .arguments('[name]')
    .action(function(name) {
        program.name = name;
        manager.init(program, nop);
    })
    .parse(process.argv);

if (program.args.length === 0) {  // action will not be called
    manager.init({}, nop);
}
